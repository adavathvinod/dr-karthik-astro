---
import Layout from '@/layouts/Layout.astro';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import { FloatingButtons } from '@/components/FloatingButtons';
import { HeroSlider } from '@/components/HeroSlider';
import { ServicesSection } from '@/components/ServicesSection';
import { ReviewsSection } from '@/components/ReviewsSection';
import { ClinicTimings } from '@/components/ClinicTimings';
import { BookingForm } from '@/components/BookingForm';
import { Button } from '@/components/ui/button';
import { Award, Users, Calendar, Stethoscope } from 'lucide-react';
import { getCompleteHomeSchema } from '@/lib/structured-data';

const stats = [
  { icon: Calendar, value: "12+", label: "Years Experience" },
  { icon: Users, value: "10,000+", label: "Happy Patients" },
  { icon: Award, value: "4.9★", label: "Google Rating" },
  { icon: Stethoscope, value: "15+", label: "Treatments" },
];

// Enterprise-level Structured Data for Google Knowledge Graph
const structuredData = getCompleteHomeSchema();
---

<Layout
  title="Best Orthopaedic Doctor in Manikonda, Hyderabad | Dr. Karthik Manchala"
  description="Dr. Karthik Manchala is a trusted orthopaedic doctor in Manikonda, Hyderabad 500089 with 12+ years experience. Specialist in knee replacement, hip replacement, arthroscopy, fracture treatment & sports injury care. 4.9★ rated clinic in Alkapur Township."
  keywords="orthopaedic doctor manikonda, bone specialist manikonda, knee replacement manikonda, hip replacement hyderabad, fracture treatment manikonda, sports injury doctor manikonda"
  canonicalUrl="/"
  structuredData={structuredData}
>

  <div class="min-h-screen bg-background">
    <Header currentPath="/" client:load />
    
    {/* Hero Section */}
    <HeroSlider client:load />

    {/* Stats Section */}
    <section class="relative -mt-16 z-10">
      <div class="section-container">
        <div class="bg-card rounded-2xl shadow-elevated p-6 md:p-8 grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
          {stats.map((stat, index) => (
            <div key={index} class="text-center">
              <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-secondary mb-3">
                <stat.icon class="w-6 h-6 text-primary" />
              </div>
              <p class="text-2xl md:text-3xl font-bold text-foreground">{stat.value}</p>
              <p class="text-sm text-muted-foreground">{stat.label}</p>
            </div> 
          ))}
        </div>
      </div>
    </section>

    {/* Services Preview */}
    <ServicesSection client:load />

    {/* View All Services Button */}
    <div class="text-center pb-2 bg-background">
      <a href="/services">
        <Button variant="outline" size="lg">
          View All Services
        </Button>
      </a>
    </div>

<section class="section-padding bg-background">
  <div class="section-container max-w-4xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-foreground mb-6">
      Orthopaedic Doctor in Manikonda, Hyderabad
    </h2>

    <p class="text-muted-foreground leading-relaxed mb-4">
      Located at Rd Number 25, Alkapur Township, Manikonda, Hyderabad 500089,
      Dr. Karthik Manchala Ortho Clinic provides advanced treatment for
      knee pain, hip arthritis, fractures, ligament injuries and sports injuries.
    </p>

    <p class="text-muted-foreground leading-relaxed">
      We specialize in 
      <a href="/knee-replacement-manikonda" class="text-primary hover:underline font-medium">
        knee replacement
      </a>, 
      <a href="/hip-replacement-manikonda" class="text-primary hover:underline font-medium">
        hip replacement
      </a>, 
      <a href="/arthroscopy-manikonda" class="text-primary hover:underline font-medium">
        arthroscopy
      </a>, 
      <a href="/fracture-treatment-manikonda" class="text-primary hover:underline font-medium">
        fracture treatment
      </a> 
      and 
      <a href="/sports-injury-treatment-manikonda" class="text-primary hover:underline font-medium">
        sports injury care
      </a> 
      in Manikonda and nearby Hyderabad areas.
    </p>
  </div>
</section>

    {/* Clinic Timings */}
    <ClinicTimings client:load />

    {/* Reviews */}
    <ReviewsSection client:load />

    {/* Booking Form */}
    <BookingForm client:load />

    <Footer client:load />
    <FloatingButtons client:load />
  </div>
</Layout>
