---
import Layout from '@/layouts/Layout.astro';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import { Button } from '@/components/ui/button';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Page Not Found",
  "description": "The page you're looking for doesn't exist.",
  "url": "https://drkmortho.com/404"
};
---

<Layout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
  canonicalUrl="/404"
  structuredData={structuredData}
>
  <div class="min-h-screen bg-background">
    <Header client:load />

    <section class="section-padding min-h-[70vh] flex items-center">
      <div class="section-container text-center">
        <h1 class="text-6xl md:text-8xl font-bold text-primary mb-4">404</h1>
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          Page Not Found
        </h2>
        <p class="text-muted-foreground text-lg max-w-2xl mx-auto mb-8">
          Sorry, the page you're looking for doesn't exist or has been moved. Let us help you find what you need.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href="/">
            <Button size="lg">
              Go Home
            </Button>
          </a>
          <a href="/contact">
            <Button variant="outline" size="lg">
              Contact Us
            </Button>
          </a>
        </div>
      </div>
    </section>

    <Footer client:load />
  </div>
</Layout>
