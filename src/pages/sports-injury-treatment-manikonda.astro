---
import Layout from '@/layouts/Layout.astro';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import { FloatingButtons } from '@/components/FloatingButtons';
import { BookingForm } from '@/components/BookingForm';
import { CheckCircle2 } from 'lucide-react';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://drkarthikmanchala.com"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Sports Injury Treatment Manikonda",
      "item": "https://drkarthikmanchala.com/sports-injury-treatment-manikonda"
    }
  ]
};

const medicalProcedureSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalTherapy",
  "name": "Sports Injury Treatment",
  "procedureType": "OrthopedicTreatment",
  "bodyLocation": "Knee, Shoulder, Ankle, Ligaments",
  "performer": {
    "@type": "Physician",
    "name": "Dr. Karthik Manchala"
  },
  "availableAtOrFrom": {
    "@type": "MedicalClinic",
    "name": "Dr. Karthik Manchala Ortho Clinic",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Rd Number 25, Alkapur Township",
      "addressLocality": "Manikonda, Hyderabad",
      "addressRegion": "Telangana",
      "postalCode": "500089",
      "addressCountry": "IN"
    }
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Who is the best sports injury doctor in Manikonda?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Dr. Karthik Manchala is an experienced orthopaedic surgeon in Manikonda specializing in sports injury treatment including ACL reconstruction and ligament repair."
      }
    },
    {
      "@type": "Question",
      "name": "What injuries require ACL reconstruction?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "ACL reconstruction is recommended when there is complete ligament tear causing instability, especially in active individuals and athletes."
      }
    },
    {
      "@type": "Question",
      "name": "How long does recovery take after sports injury surgery?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Recovery time varies depending on the injury and procedure. Minor injuries may recover within weeks, while ligament reconstruction may require structured rehabilitation over several months."
      }
    }
  ]
};

const pageStructuredData = {
  "@context": "https://schema.org",
  "@graph": [
    breadcrumbSchema,
    medicalProcedureSchema,
    faqSchema,
    {
      "@type": "WebPage",
      "name": "Best Sports Injury Treatment in Manikonda",
      "url": "https://drkarthikmanchala.com/sports-injury-treatment-manikonda"
    }
  ]
};
---

<Layout
  title="Best Sports Injury Treatment in Manikonda"
  description="Looking for sports injury treatment in Manikonda? Dr. Karthik Manchala provides expert care for ACL injuries, ligament tears, and athletic injuries in Alkapur Township, Hyderabad 500089."
  keywords="sports injury treatment in manikonda, sports injury doctor manikonda, ACL reconstruction hyderabad, ligament injury treatment manikonda, sports orthopaedic surgeon hyderabad"
  canonicalUrl="/sports-injury-treatment-manikonda"
  structuredData={pageStructuredData}
>
  <div class="min-h-screen bg-background">
    <Header currentPath="/sports-injury-treatment-manikonda" client:load />

    {/* Hero Section */}
    <section class="bg-gradient-to-b from-secondary/50 to-background section-padding">
      <div class="section-container text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
          Sports Injury Treatment in Manikonda
        </h1>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Dr. Karthik Manchala offers advanced sports injury treatment in Manikonda,
          Alkapur Township, Hyderabad 500089. From ligament injuries to ACL
          reconstruction, he provides comprehensive orthopaedic care for athletes
          and active individuals.
        </p>
      </div>
    </section>

    {/* Content Section */}
    <section class="section-padding">
      <div class="section-container max-w-4xl mx-auto space-y-8">

        <h2 class="text-2xl font-bold text-foreground">
          Trusted Sports Injury Doctor in Manikonda
        </h2>
        <p class="text-muted-foreground leading-relaxed">
          Sports injuries can affect joints, ligaments, muscles, and bones.
          At Dr. Karthik Manchala Ortho Clinic located at Rd Number 25,
          Alkapur Township, Manikonda, patients receive expert diagnosis and
          treatment tailored to restore mobility and performance safely.
        </p>

        <h2 class="text-2xl font-bold text-foreground">
          Common Sports Injuries Treated
        </h2>
        <ul class="space-y-3 text-muted-foreground">
          <li class="flex gap-2">
            <CheckCircle2 class="w-5 h-5 text-primary" />
            ACL and ligament tears
          </li>
          <li class="flex gap-2">
            <CheckCircle2 class="w-5 h-5 text-primary" />
            Meniscus injuries
          </li>
          <li class="flex gap-2">
            <CheckCircle2 class="w-5 h-5 text-primary" />
            Shoulder dislocations and rotator cuff injuries
          </li>
          <li class="flex gap-2">
            <CheckCircle2 class="w-5 h-5 text-primary" />
            Ankle sprains and sports fractures
          </li>
        </ul>

        <h2 class="text-2xl font-bold text-foreground">
          ACL Reconstruction & Ligament Injury Treatment in Hyderabad
        </h2>
        <p class="text-muted-foreground leading-relaxed">
          For severe ligament injuries, ACL reconstruction surgery may be
          recommended. Dr. Karthik Manchala performs advanced arthroscopic
          procedures to restore joint stability and help patients return
          to sports activities safely.
        </p>

        <h2 class="text-2xl font-bold text-foreground">
          Why Choose Dr. Karthik Manchala for Sports Injury Care?
        </h2>
        <p class="text-muted-foreground leading-relaxed">
          With over 12 years of orthopaedic experience, Dr. Karthik Manchala
          provides structured rehabilitation guidance and personalized treatment
          plans. Patients from Manikonda, Alkapur Township, Puppalaguda,
          Narsingi, and surrounding Hyderabad areas trust his expertise in
          sports injury treatment.
        </p>

      </div>
    </section>

    {/* Booking */}
    <BookingForm client:load />

    <Footer client:load />
    <FloatingButtons client:load />
  </div>
</Layout>
