---
import Layout from '@/layouts/Layout.astro';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import { FloatingButtons } from '@/components/FloatingButtons';
import { BookingForm } from '@/components/BookingForm';
import { ClinicTimings } from '@/components/ClinicTimings';
import { Button } from '@/components/ui/button';
import { Phone, MessageCircle, MapPin, Clock } from 'lucide-react';

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://drkmortho.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Contact",
      "item": "https://drkmortho.com/contact"
    }
  ]
};

const clinicSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalClinic",
  "name": "Dr. Karthik Manchala Ortho Clinic",
  "alternateName": "KM Ortho Clinic",
  "url": "https://drkmortho.com",
  "logo": "https://drkmortho.com/logo.png",
  "image": "https://drkmortho.com/clinic-reception.jpg",
  "telephone": "+91-6281894631",
  "priceRange": "$$",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Rd Number 25, Alkapur Township",
    "addressLocality": "Manikonda, Hyderabad",
    "addressRegion": "Telangana",
    "postalCode": "500089",
    "addressCountry": "IN"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 17.395,
    "longitude": 78.375
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "10:00",
      "closes": "14:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      "opens": "17:00",
      "closes": "21:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Sunday",
      "opens": "11:00",
      "closes": "14:00"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.9",
    "reviewCount": "150",
    "bestRating": "5"
  },
  "medicalSpecialty": "Orthopedic",
};

const contactPageStructuredData = {
  "@context": "https://schema.org",
  "@graph": [
    breadcrumbSchema,
    clinicSchema,
    {
      "@type": "WebPage",
      "name": "Contact Dr. Karthik Manchala Ortho Clinic",
      "description": "Book an appointment or contact Dr. Karthik Manchala Ortho Clinic in Manikonda, Hyderabad. Phone, WhatsApp, address and clinic timings.",
      "url": "https://drkmortho.com/contact"
    },
    {
      "@type": "ContactPage",
      "name": "Contact & Appointment",
      "url": "https://drkmortho.com/contact",
      "mainEntity": {
        "@type": "MedicalClinic",
        "name": "Dr. Karthik Manchala Ortho Clinic",
        "telephone": "+91-6281894631",
        "email": "info@drkmortho.com"
      }
    }
  ]
};
---

<Layout
  title="Orthopaedic Clinic in Manikonda | Contact Dr. Karthik Manchala"
  description="Contact Dr. Karthik Manchala Ortho Clinic in Manikonda, Hyderabad 500089. Call +91 62818 94631 or WhatsApp to book appointment for knee replacement, fracture treatment and sports injury care."
  keywords="orthopaedic clinic manikonda, contact ortho doctor hyderabad, book appointment manikonda"
  canonicalUrl="/contact"
  structuredData={contactPageStructuredData}
>

  <div class="min-h-screen bg-background">
    <Header currentPath="/contact" client:load />

    {/* Page Header */}
    <section class="bg-gradient-to-b from-secondary/50 to-background py-16">
      <div class="section-container text-center">
        <span class="text-primary font-semibold text-sm uppercase tracking-wider">Get In Touch</span>
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mt-3 mb-4">
          Contact Us
        </h1>
        <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
          Book an appointment or reach out to us for any queries
        </p>
      </div>
    </section>

    {/* Contact Info & Map */}
    <section class="pt-0 pb-16">
      <div class="section-container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
          {/* Contact Cards */}
          <div class="space-y-6">
            {/* Phone */}
            <address class="medical-card p-6 flex items-start gap-5 not-italic">
              <div class="w-14 h-14 rounded-2xl bg-secondary flex items-center justify-center flex-shrink-0">
                <Phone class="w-7 h-7 text-primary" aria-hidden="true" />
              </div>
              <div class="flex-1">
                <h2 class="font-semibold text-lg text-foreground mb-2">Call Us</h2>
                <a href="tel:+916281894631" class="text-2xl font-bold text-primary hover:underline">
                  +91 62818 94631
                </a>
                <p class="text-sm text-muted-foreground mt-1">For appointments and enquiries</p>
              </div>
            </address>

            {/* WhatsApp */}
            <div class="medical-card p-6 flex items-start gap-5">
              <div class="w-14 h-14 rounded-2xl bg-[#25D366]/10 flex items-center justify-center flex-shrink-0">
                <MessageCircle class="w-7 h-7 text-[#25D366]" aria-hidden="true" />
              </div>
              <div class="flex-1">
                <h2 class="font-semibold text-lg text-foreground mb-2">WhatsApp</h2>
                <a
                  href={`https://wa.me/916281894631?text=${encodeURIComponent("Hello, I would like to book an appointment with Dr. Karthik Manchala.")}`}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Button client:load class="bg-[#25D366] hover:bg-[#20BA5A] gap-2">
                    <MessageCircle class="w-4 h-4" aria-hidden="true" />
                    Message on WhatsApp
                  </Button>
                </a>
                <p class="text-sm text-muted-foreground mt-2">Quick response guaranteed</p>
              </div>
            </div>

            {/* Address */}
            <address class="medical-card p-6 flex items-start gap-5 not-italic">
              <div class="w-14 h-14 rounded-2xl bg-secondary flex items-center justify-center flex-shrink-0">
                <MapPin class="w-7 h-7 text-primary" aria-hidden="true" />
              </div>
              <div class="flex-1">
                <h2 class="font-semibold text-lg text-foreground mb-2">Clinic Address</h2>
                <p class="text-muted-foreground leading-relaxed">
                  Dr. Karthik Manchala Ortho Clinic<br />
                  Rd Number 25, Alkapur Township,<br />
                  Manikonda, Hyderabad,<br />
                  Telangana 500089
                </p>
                <a
                  href="https://maps.google.com/?q=Rd+Number+25,+Alkapur+Township,+Manikonda,+Hyderabad,+Telangana+500089"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Button client:load variant="outline" size="sm" class="mt-3 gap-2">
                    <MapPin class="w-4 h-4" aria-hidden="true" />
                    Get Directions
                  </Button>
                </a>
              </div>
            </address>

            {/* Timings */}
            <div class="medical-card p-6 flex items-start gap-5">
              <div class="w-14 h-14 rounded-2xl bg-secondary flex items-center justify-center flex-shrink-0">
                <Clock class="w-7 h-7 text-primary" aria-hidden="true" />
              </div>
              <div class="flex-1">
                <h2 class="font-semibold text-lg text-foreground mb-2">Clinic Timings</h2>
                <div class="space-y-2 text-muted-foreground">
                  <div>
                    <span class="font-medium text-foreground">Mon - Sat:</span> 10:00 AM - 2:00 PM, 5:00 PM - 9:00 PM
                  </div>
                  <div>
                    <span class="font-medium text-foreground">Sunday:</span> 11:00 AM - 2:00 PM
                  </div>
                </div>
              </div>
            </div>
          </div>

          {/* Clinic Images */}
          <div class="space-y-6">
            <figure class="medical-card overflow-hidden">
              <img
                src="/clinic-reception.png"
                alt="Dr. Karthik Manchala Ortho Clinic Reception and Waiting Area in Manikonda, Hyderabad"
                class="w-full h-64 object-cover"
                loading="lazy"
              />
              <figcaption class="p-4">
                <p class="font-medium text-foreground">Reception & Waiting Area</p>
              </figcaption>
            </figure>
            <figure class="medical-card overflow-hidden">
              <img
                src="/clinic-consultation.png"
                alt="Consultation Room at Dr. Karthik Manchala Ortho Clinic"
                class="w-full h-64 object-cover"
                loading="lazy"
              />
              <figcaption class="p-4">
                <p class="font-medium text-foreground">Consultation Room</p>
              </figcaption>
            </figure>
          </div>
        </div>
      </div>
    </section>

<section class="section-padding bg-primary text-white mb-16">
  <div class="section-container max-w-4xl mx-auto text-center">
    <h2 class="text-2xl md:text-3xl font-bold mb-4">
      Visit Our Orthopaedic Clinic in Manikonda
    </h2>
    <p class="text-white/90 leading-relaxed">
      Our clinic is located at Rd Number 25, Alkapur Township,
      Manikonda, Hyderabad 500089. Book your consultation for
      joint replacement, fracture care or sports injury treatment today.
    </p>
  </div>
</section>



    {/* Booking Form */}
    <BookingForm client:load />

    <Footer client:load />
    <FloatingButtons client:load />
  </div>
</Layout>
